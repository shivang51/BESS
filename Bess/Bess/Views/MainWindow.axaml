<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Bess.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainPageViews="clr-namespace:Bess.Views.MainPageViews"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="Bess.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo-1024.png"
        FontFamily="{DynamicResource RobotoRegular}"
        Title="Bess">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="Border.BlurBackground">
            <Setter Property="IsVisible" Value="{Binding IsNotLinux}"></Setter>
        </Style>
    </Window.Styles>
    
    <Grid RowDefinitions="Auto, *, Auto">
        <Border Grid.Row="0" Height="32">
            <Grid ColumnDefinitions="*">
                <DockPanel HorizontalAlignment="Stretch" Background="Transparent">
                    <Image Source="/Assets/logo.png" Width="16" Height="16" Margin="4 0"></Image>
                    <mainPageViews:MenuBar />
                </DockPanel>
                <Label VerticalAlignment="Center" HorizontalAlignment="Center"
                       Content="*new-project" />
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" MaxWidth="1"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" MaxWidth="1"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <mainPageViews:ComponentExplorer Grid.Column="0"/>
            <GridSplitter Margin="1 16" Grid.Column="3"/>
            <mainPageViews:BessSceneView Grid.Column="2"/>
            <GridSplitter Margin="1 16" Grid.Column="1"/>
            <Border Classes="BlurBackground" Grid.Column="4" Background="#10FFFFFF">
                <Border.Effect>
                    <BlurEffect Radius="32"></BlurEffect>
                </Border.Effect>
            </Border>
            <mainPageViews:ProjectExplorer Grid.Column="4" Name="ProjectExplorer" />
        </Grid>
        
        <DockPanel Grid.Row="2">
            <Border Padding="8 4">
                <TextBlock Text="Simulation Running" HorizontalAlignment="Right"></TextBlock>
            </Border>
        </DockPanel>
    </Grid>
</Window>
