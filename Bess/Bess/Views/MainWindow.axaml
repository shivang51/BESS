<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Bess.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainPageViews="clr-namespace:Bess.Views.MainPageViews"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="Bess.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo-1024.png"
        Title="Bess">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Height="32">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/logo.png" Width="16" Height="16" Margin="4 0"></Image>
                <mainPageViews:MenuBar/>
            </StackPanel>
        </Border>
        <!-- <Grid Grid.Row="1" ColumnDefinitions="Auto,2,*,2,Auto"> -->
            <!-- <mainPageViews:ComponentExplorer Grid.Column="0" Width="300"/> -->
            <!-- <GridSplitter Grid.Column="1"></GridSplitter> -->
            <!-- <mainPageViews:BessSceneView Grid.Column="2" /> -->
            <!-- <GridSplitter Grid.Column="3"></GridSplitter> -->
            <!-- <mainPageViews:ProjectExplorer Grid.Column="4" Width="300"/> -->
    <DockControl Grid.Row="1" x:Name="DockControl" Layout="{Binding Layout}" Margin="4"
                 />
        <!-- </Grid> -->
    </Grid>

</Window>
