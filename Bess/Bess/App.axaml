<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Bess.App"
             xmlns:local="using:Bess"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:converters="clr-namespace:Bess.Converters"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <converters:ResourceToGeometryConverter x:Key="ResourceToGeometryConverter" />
        <ControlRecycling x:Key="ControlRecyclingKey" />
    </Application.Resources>
    
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <DockFluentTheme />
        <styling:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <!-- <StyleInclude Source="avares://Bess/FluentIcons.axaml"></StyleInclude> -->
        <!-- <Style Selector="DockControl"> -->
        <!--     <Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" -->
        <!--             Value="{StaticResource ControlRecyclingKey}" /> -->
        <!-- </Style> -->
    </Application.Styles>
    
</Application>