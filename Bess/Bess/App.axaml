<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Bess.App"
             xmlns:local="using:Bess"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:converters="clr-namespace:Bess.Converters"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <converters:StringToResourceConverter x:Key="ResourceToGeometryConverter" />
        
        <FontFamily x:Key="RobotoRegular">/Assets/fonts/Roboto/Roboto-Regular.ttf#Roboto</FontFamily>
        <FontFamily x:Key="DeliusSwashRegular">/Assets/fonts/DeliusSwashCaps/DeliusSwashCaps-Regular.ttf#Delius Swash Caps</FontFamily>
        
        <!-- <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%"> -->
        <!--     <GradientStop Offset="0" Color="#7E303B4A"/> -->
        <!--     <GradientStop Offset="1" Color="#2E2C243B"/> -->
        <!-- </LinearGradientBrush> -->
    </Application.Resources>
    
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <StyleInclude Source="avares://Bess/Styles/FluentIcons.axaml"></StyleInclude>
        <StyleInclude Source="avares://Bess/Styles/WindowStyles.axaml"></StyleInclude>
    </Application.Styles>
</Application>